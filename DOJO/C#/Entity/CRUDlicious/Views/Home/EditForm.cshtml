@model Dish
<h1>Edit @Model.Name</h1>

<a href="/">Home</a>

<form asp-action="edit/{ID}" method="POST" asp-controller="Home">
    <label asp-for="Chef"></label>
    <input asp-for="Chef" type="text">
    <span class="text-danger" asp-validation-for="Chef"></span>

    <label asp-for="Name"></label>
    <input asp-for="Name" type="text">
    <span class="text-danger" asp-validation-for="Name"></span>

    <label asp-for="Calories"></label>
    <input asp-for="Calories" type="text">
    <span class="text-danger" asp-validation-for="Calories"></span>

<div class="form-group">
    <label asp-for="Tastiness"></label>
    <select class="form-control, col-xs-2" asp-for="Tastiness" id="sel1">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <span class="text-danger" asp-validation-for="Tastiness"></span>
</div>

    <label asp-for="Description"></label>
    <input asp-for="Description" type="text">
    <span class="text-danger" asp-validation-for="Description"></span>

    <button type="submit">Submit</button>
</form>
