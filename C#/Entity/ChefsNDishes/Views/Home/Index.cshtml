@{
    ViewData["Title"] = "Home Page";
}

@model List<Chef>

<h1>Chefs | <a href="/dishes"> Dishes </h1></a>

<a href="/new">Add a Chef</a>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col"># of Dishes</th>
    </tr>
  </thead>
  <tbody>

      @{ foreach(var C in Model)
        {
    <tr>
      <td>@C.firstName @C.lastName</td>
      <td>@C.CalculateAge()</td>
      <td>@C.CreatedDishes.Count()</td>
    </tr>
        }
      }
  </tbody>
</table>